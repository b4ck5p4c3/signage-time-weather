{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@bksp/style-guide/ts",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2022"],
		"target": "es2022",
		"moduleDetection": "force",
		"module": "preserve",
		"resolveJsonModule": true,
		"allowJs": true,
		"verbatimModuleSyntax": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
